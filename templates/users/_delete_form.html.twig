<form method="post" action="{{ path('users_delete', {'username': user.username}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir désactiver votre compte ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.username) }}">
    <button class="btn">Désactiver mon compte</button>
</form>
