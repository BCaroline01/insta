{% extends 'base.html.twig' %}

{% block title %}Hashtags index{% endblock %}

{% block body %}
    <h1>Hashtags index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hashtag in hashtags %}
            <tr>
                <td>{{ hashtag.id }}</td>
                <td>{{ hashtag.Name }}</td>
                <td>{{ hashtag.slug }}</td>
                <td>
                    <a href="{{ path('hashtags_show', {'id': hashtag.id}) }}">show</a>
                    <a href="{{ path('hashtags_edit', {'id': hashtag.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('hashtags_new') }}">Create new</a>
{% endblock %}
